@model BankApp.App.Models.ViewModels.TransactionViewModel

<h4>Transaction</h4>
<div class="text-center"><span>@ViewBag.Message</span></div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Deposit" method="post">

            <div class="form-group">
                <label asp-for="AccountId" class="control-label">Kontonr:</label>
                <input asp-for="AccountId" class="form-control" />
                <span asp-validation-for="AccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Summa:</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Insättning" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Withdraw" method="post">
            <div class="form-group">
                <label asp-for="AccountId" class="control-label">Kontonr:</label>
                <input asp-for="AccountId" class="form-control" />
                <span asp-validation-for="AccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Summa:</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Uttag" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
